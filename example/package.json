{
  "name": "serverless-plugin-ignitor-example",
  "version": "1.0.0",
  "description": "Showing how serverless-plugin-ignitor can be used",
  "scripts": {
    "deploy": "serverless deploy",
    "local:hello": "serverless invoke local --function hello",
    "local:goodbye": "serverless invoke local -f goodbye --p fixtures/ignitor.json",
    "local:once": "serverless invoke local -f runOnce",
    "local": "serverless invoke local -f hello -p fixtures/event.json"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.0",
    "babel-loader": "^8.0.4",
    "serverless": "^1.35.0",
    "serverless-plugin-ignitor": "../",
    "serverless-webpack": "^5.2.0",
    "webpack": "^4.28.0",
    "webpack-node-externals": "^1.7.2"
  }
}
